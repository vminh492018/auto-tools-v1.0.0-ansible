bind {{ ansible_default_ipv4.address }} 
port 8371
daemonize yes
pidfile "/u01/redis/pids/sentinel.pid"
logfile "/u01/redis/logs/sentinel.log"
dir "/u01/redis/data"

sentinel monitor mymaster {{ hostvars[groups['Redis_servers'][0]]['ansible_host'] }} 8379 {{ ((groups['Redis_servers'] | length / 2) | round(0, 'ceil') + 1) | int }}
sentinel auth-pass mymaster Redis@2468

sentinel down-after-milliseconds mymaster 30000
sentinel failover-timeout mymaster 180000

acllog-max-len 128
requirepass "Redis@2468"
sentinel deny-scripts-reconfig yes
